# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/legal_connect
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# Spring Configuration
SPRING_APPLICATION_NAME=legal-connect
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Session Configuration
SPRING_SESSION_STORE_TYPE=jdbc
SPRING_SESSION_TIMEOUT=1800
SERVER_SERVLET_SESSION_COOKIE_NAME=SESSIONID
SERVER_SERVLET_SESSION_COOKIE_HTTP_ONLY=true
SERVER_SERVLET_SESSION_COOKIE_SECURE=false
SERVER_SERVLET_SESSION_COOKIE_MAX_AGE=1800

# Redis Configuration
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_TIMEOUT=60000ms
SPRING_REDIS_PASSWORD=
SPRING_REDIS_DATABASE=0

# Cache Configuration
SPRING_CACHE_TYPE=redis
SPRING_CACHE_REDIS_TIME_TO_LIVE=3600000
SPRING_CACHE_REDIS_KEY_PREFIX=legal-connect:
SPRING_CACHE_REDIS_CACHE_NULL_VALUES=false

# RabbitMQ Configuration
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=guest
SPRING_RABBITMQ_PASSWORD=guest
SPRING_RABBITMQ_VIRTUAL_HOST=/

# OAuth2 Google Configuration
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_SCOPE=openid,profile,email
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# OAuth2 Redirect URIs
APP_OAUTH_REDIRECT_URI_WEB=http://localhost:3000/auth/callback
APP_OAUTH_REDIRECT_URI_MOBILE=com.legalconnect://oauth2/callback

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# Application Configuration
APP_JWT_SECRET=mySecretKeyChangeThisInProduction
APP_JWT_EXPIRATION=86400000
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
APP_PDF_UPLOAD_DIR=./uploads/pdf
APP_PDF_ALLOWED_TYPES=application/pdf
APP_PDF_MAX_SIZE=10485760

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://backend:8080/api
NEXT_PUBLIC_TINYMCE_API_KEY=YOUR_TINYMCE_API_KEY

# PostgreSQL Configuration (for postgres service)
POSTGRES_DB=legal_connect
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# RabbitMQ Management UI Credentials
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
